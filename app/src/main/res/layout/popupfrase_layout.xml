<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#DB363E"
    tools:context=".Vista.FortuneCookie">

    <LinearLayout
        android:id="@+id/linearGif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#454545" >

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifImg"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@raw/frasedeldia" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearFrase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearGif"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#DB363E"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/TextoRecibir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/lato_italic"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearBtns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearFrase"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/GuardarFrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#444444"
            android:fontFamily="@font/lato_bold_italic"
            android:text="Guardar Frase"
            app:cornerRadius="5dp" />

        <Button
            android:id="@+id/QuieroMas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#444444"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/lato_bold_italic"
            android:text="Quiero MÃ¡s"
            app:cornerRadius="5dp" />

    </LinearLayout>
</RelativeLayout>
